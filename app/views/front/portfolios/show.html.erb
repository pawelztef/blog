<div class="mdl-project-show">
  <div class="mdl-grid portfolio-max-width">
    <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text"> <%= @project.title %> </h2>
      </div>
      <div class="mdl-card__media">
        <%# <img class="article-image" src=" images/portfolio-example-01.jpg" border="0" alt=""> %>
        <% unless @project.project_images.empty?  %>
          <%= image_tag @project.project_images.first.image_url, class: "article-image" %> 
        <% end %> 
      </div>
      <div class="mdl-card__supporting-text">
        <strong>Includes</strong>
        <span> <%= set_project_tags(@project) %> </span>
      </div>
      <div class="mdl-grid portfolio-copy">
        <%= @project.description.html_safe %>
      </div>
    </div>
  </div>
</div>
