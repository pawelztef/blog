<h3>Add Comment</h3>
<div class="form-horizontal">
  <%= form_for @visitor_comment, url: front_comments_url do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <% if session[:visitor_errors] %>
          <div id="error-explanation">
            <h4> <%= pluralize(session[:visitor_errors].count, 'error') %> prohibited this comment from being saved :</h4>
            <ul>
              <% session[:visitor_errors].each do |message| %>
                <li> <%= message %> </li>
              <% end %> 
            </ul>
          </div>
      </div>
    <% end %> 
    </div>

    <div class="form-group">
      <%= f.label :fullname, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :fullname, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.fields_for :comments do |c| %>
        <%= c.label :message, class: "col-sm-2 control-label" %> 
        <div class="col-sm-10">
          <%= c.text_area :message, class: "form-control", rows: "5" %> 
        </div>
        <%= c.hidden_field :post_id, value: @post.id %> 
      <% end %> 
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Add Comment', class: "btn btn-default" %>
      </div>
    </div>
  <% end %> 
</div>
<hr />
