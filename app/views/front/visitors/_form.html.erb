<div class="mdl-grid portfolio-max-width portfolio-contact">
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Contact</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <%= form_for([:front, @front_visitor]) do |f| %>
        <% if @front_visitor.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@front_visitor.errors.count, "error") %> prohibited this front_visitor from being saved:</h2>
            <ul>
              <% @front_visitor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :fullname, class: "mdl-textfield__label" %>
          <%= f.text_field :fullname, class: "mdl-textfield__input" %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label :email, class: "mdl-textfield__label" %>
          <%= f.text_field :email, class: "mdl-textfield__input" %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.fields_for :messages do |c| %>
            <%= c.label :content, class: "mdl-textfield__label" %> 
            <%= c.text_area :content, class: "mdl-textfield__input", rows: 5 %> 
          <% end %> 
        </div>

        <div class="actions">
          <%= f.submit 'Send message', class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %> 
        </div>
      <% end %>

    </div>
  </div>
</div>
