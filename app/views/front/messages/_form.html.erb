<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="form-horizonatal">

        <%= form_for [:front, @visitor_message] , remote: true do |f| %>
          <div class="modal-body">
            <div class="form-group">
                <div class="col-sm-10">
                  <button type="button" class="close">x</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                  <p class="text-center">Please leave your message and I'll wirte you back.</p>
                </div>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
                <div id="error_explanation"></div>
                <ul id="errors"></ul>
              </div>
            </div>


            <div class="form-group">
              <div class="col-sm-10">
                <%= f.label :fullname, class: "control-label" %>
                <%= f.text_field :fullname, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-10">
                <%= f.label :email, class: "control-label" %>
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <%= f.fields_for :messages do |c| %>
                <div  class="col-sm-10">
                  <%= c.label :content, class: "control-label" %> 
                  <%= c.text_area :content, class: "form-control", rows: "5" %> 
                </div>
              <% end %> 
            </div>

            <div class="form-group">

              <div class="col-sm-10">
                <%= f.submit 'Send message', class: "btn btn-default" %> 
              </div>
            </div>
          </div>

        <% end %> 
      </div>

    </div>
  </div>
</div>
