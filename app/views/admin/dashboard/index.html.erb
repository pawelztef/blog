<div id="admin-dashboard-content">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-7 dashboard-left-cell">
      <div class="admin-content-container">
        <header class="clearfix">
          <h2 class="pull-left page-title">Articles</h2>
          <%= link_to 'Areate new post', new_admin_post_path, class: "btn btn-xs btn-default pull-right"  %> <br />
        </header>
        <div class="row">
          <div class="col-xs-6"> <p>Title</p></div>
          <div class="col-xs-1"> <p>Replies</p></div>
          <div class="col-xs-2"> <p>Date</p></div>
          <div class="col-xs-3"> <p>Actions</p></div>
        </div>
        <% @posts.each do |post| %>
          <div class="row">
            <div class="col-xs-6"><%= truncate(post.title, length: 15, separator: '') %></div>
            <div class="col-xs-1"><%= post.comments.count %></div>
            <div class="col-xs-2"><%= time_ago post.created_at %></div>
            <div class="col-xs-3">
              <%= link_to "<span class='fa fa-folder-open-o'></span>".html_safe, admin_post_path(post), class: 'btn btn-xs btn-default' %>
              <%= link_to "<span class='fa fa-pencil-square-o'></span>".html_safe, edit_admin_post_path(post), class: 'btn btn-xs btn-default' %>
              <%= link_to "<span class='fa fa-trash-o'></span>".html_safe, admin_post_path(post), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-xs btn-default' %>
            </div>
          </div>
        <% end %> 
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 dashboard-right-cell">
      <div class="admin-content-container">
        <header class="clearfix">
          <h2 class="pull-left page-title">Comments</h2>
        </header>
        <% @comments.each do |comment| %>
          <div class="comment-head-dash clearfix">
            <div class="commenter-name-dash pull-left"> <%= comment.visitor.fullname %> </div>
            <div class="days-dash pull-right"> <%= time_ago comment.created_at %> </div>
          </div>
          <p class="comment-dash" ><%= truncate(comment.message, length: 122, separator: '') %> </p> 
          <small> <%= comment.created_at.strftime("%a %H:%M - %d/%m/%Y") %> </small>
          <hr />
        <% end %> 
        <div class="cleafix">
          <%= link_to 'View all comments', admin_comments_path, class: "pull-right text-link" %> 
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="admin-content-container clearfix">
        <header class="clearfix">
          <h2 class="pull-left page-title">Visitors</h2>
        </header>
        <div class="row">
          <div class="col-xs-1"> <p>#</p></div>
          <div class="col-xs-4"> <p>Full name</p></div>
          <div class="col-xs-4"> <p>Email</p></div>
          <div class="col-xs-2"> <p>Created</p></div>
          <div class="col-xs-1"> <p>Actions</p></div>
        </div>
        <% @visitors.each_with_index do |visitor, index|  %>
          <div class="row">
            <div class="col-xs-1"><%= index + 1 %></div>
            <div class="col-xs-4"><%= visitor.fullname %></div>
            <div class="col-xs-4"><%= visitor.email %></div>
            <div class="col-xs-2"><%= time_ago visitor.created_at %></div>
            <div class="col-xs-1"><%= link_to "<span class='fa fa-trash-o'></span> Delete".html_safe, admin_visitor_path(visitor), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-xs btn-default' %></div>
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>

















