<%= form_for [:admin, @book], html: { multipart: true}  do |f| %> 
  <div class='form-group'>
    <%= f.label "Title" %><br />
    <%= f.text_field :title, class: 'form-control' %>  
  </div>
  <div class='form-group'>
    <%= f.label "Author's First Name" %><br />  
    <%= f.text_field :author_fname, class: 'form-control' %>  
  </div>
  <div class='form-group'>
    <%= f.label "Author's Last Name" %><br />  
    <%= f.text_field :author_lname, class: 'form-control' %>  
  </div>
  <div class='form-group'>
    <%= f.label "Publisher" %><br />    
    <%= f.text_field :publisher, class: 'form-control' %>  
  </div>
  <div class='form-group'>
    <%= f.label "Publish year" %><br />  
    <%= f.text_field :publish_year, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label "ISBN" %><br />  
    <%= f.text_field :isbn, class: 'form-control' %>  
  </div>
  <div class='form-group'>
    <%= f.label "Display" %>
    <%= f.check_box :display  %>  
  </div>
  <div class='form-group'>
    <%= f.label "Upload file" %><br />  
    <%= f.file_field :cover %>  
  </div>

  <%= f.fields_for :review do |review| %>
    <p> <%= review.label :content, "Content" %>  </p>
    <%= review.cktext_area :content, rows: 10, cols: 20 %>
  <% end %> 
  <div class='form-group'>
    <%= f.submit "Submit", class: 'btn btn-default' %>  
  </div>
<% end %> 
