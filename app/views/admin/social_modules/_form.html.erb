<%= form_for([:admin, @social_module]) do |f| %>

  <% if @social_module.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@social_module.errors.count, "error") %> prohibited this form from being saved:</h2>
      <ul>
        <% @social_module.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="social_links">
    <%= f.fields_for :social_links do |link| %> 
      <%= render 'social_link_fields', f: link %> 
    <% end %> 
  </div>

  <div class="actions">
    <%= f.submit "Update Social Links", class: 'btn btn-default' %>
    <%= link_to "Back", new_admin_setting_path, class: 'btn btn-default' %> 
    <%= link_to_add_association icon('plus'), f, :social_links, class: 'btn btn-default' %> 
  </div>

<% end %>
