<div id="admin-tags-container">
  <div class="row">
    <div class="col-md-4 dashboard-left-cell">
      <div class="admin-content-container">
        <header>
          <h3>Create Tags</h3>
        </header>
        <%= form_for [:admin, @tag] do |f| %> 
          <div class="form-group">
            <%= f.label "Add comma separated tags" %> 
            <p> <%= f.text_area :name, placeholder: 'e.g. Ruby, Python, PHP', class: "form-control", rows: 3 %> </p>
            <%= f.submit class: "btn btn-large btn-block btn-default" %> 
          </div>
        <% end %> 
      </div>
    </div>

    <div class="col-md-8 dashboard-right-cell">
      <div class="admin-content-container">
        <header>
          <h3>Tags</h3>
        </header>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td> <%= tag.name %> </td>
                <td> <%= "<span class='label label-default #{status_converter(tag.in_use?, truthy: 'Active', falsey: 'Inactive')} '> #{status_converter(tag.in_use?, truthy: 'in use', falsey: 'not in use')} </span>".html_safe %> </td>
                <td> <%= time_ago tag.created_at %> </td>
                <td>
                  <%= link_to "<span class='fa fa-pencil-square-o'></span> Edit".html_safe, edit_admin_tag_path(tag), class: 'btn btn-xs btn-default' %> 
                  <%# <%= link_to edit_admin_tag_path(tag) do %1> %> 
                  <%#   <button type="button">Edit</button> %>
                  <%# <% end %1> %> 
                <%= create_deletable_button tag %> 
                </td>
              </tr>
            <% end %> 
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
