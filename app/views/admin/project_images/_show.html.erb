<div id="projectImageShow" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-header-details">
          <p class="page-title">Edit image details</p>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i aria-hidden="true">&times;</i>
          </button>
        </div>
      </div>
      <%= form_for([:admin, @admin_project_image], remote: true, html: {"data-type" => :json}) do |f| %>
        <div class="modal-body">
          <div id="error_explanation">
          </div>
          <div class="form-group">
            <%= f.label :title %> 
            <%= f.text_field :title, class: 'form-control' %> 
          </div>
          <div class="form-group">
            <%= f.label :description %> 
            <%= f.text_area :description, class: 'form-control' %> 
          </div>

        </div>
        <div class="modal-footer">
          <div class="form-group">
            <%= f.submit 'Save changes', class: 'submit btn btn-default' %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
