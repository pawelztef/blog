<!-- Button trigger modal -->
<button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#exampleModal">
  Add images 
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-header-details">
          <p class="page-title">Chose images</p>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i aria-hidden="true">&times;</i>
          </button>
        </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <%= render "images_loop", images: images %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="update-project" class="btn btn-default">Save changes</button>
      </div>
    </div>
  </div>
</div>
