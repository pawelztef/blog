<%= form_for([:admin, @admin_project]) do |f| %>
  <%= render 'admin/application/validation_errors', object: @admin_project %> 
  <div class="form-group">
    <%= f.label :title %> 
    <%= f.text_field :title, class: 'form-control' %> 
  </div>
  <div class="form-group">
    <%= f.label :description %> 
    <%= f.text_area :description, class: 'form-control' %> 
  </div>
  <%= f.fields_for :project_images do |img| %> 
    <div class="form-group">
      <div class="row">
        <div class="col-md-3">
          <%= img.label :project_image, 'Image upload' %> 
          <%= img.file_field :project_image, class: 'form-control file-upl' %> 
        </div>
        <div class="col-md-9">
          <%= img.label :title, 'Image title' %> 
          <%= img.text_field :title, class: 'form-control', placeholder: 'title' %> 
        </div>
      </div>
    </div>
  <% end %> 
  <div class="form-group">
    <%= f.label :display, "Publish project when I click on save" %> 
    <%= f.check_box :display, class: 'checkbox' %> 
  </div>
  <div class="form-group">
    <%= f.submit "Create / publish", class: 'clearfix btn btn-default' %>
  </div>
<% end %>
