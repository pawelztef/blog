<p> <%= render 'validation_errors', object: @post %> </p>

<%= form_for [:admin, @post] do |f| %>
  <div class="form-group">
    <%= f.label :title %> 
    <%= f.text_field :title, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label "chose tags" %> 
    <%= f.select :tag_ids, Tag.all.collect{|t| [t.name, t.id]}, {prompt: 'Select Tag'}, multiple: :true, class: 'chosen-select form-control'  %> 
  </div>
  <div class="form-group">
    <%= f.label :content %> 
    <%= f.cktext_area :content, rows: 10, cols: 20 %>
  </div>
  <div class="form-group">
      <%= f.label :publish, "publish article when I click on save" %> 
      <%= f.check_box :publish, class: 'checkbox' %>
  </div>
  <div class="form-group">
      <%= f.submit "Save/Publish", class: 'clearfix btn btn-default'  %>
  </div>
<% end %> 
