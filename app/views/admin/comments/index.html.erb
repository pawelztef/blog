<div id="admin-all-comments-content">
  <header class='clearfix'>
    <h2 class="page-title pull-left">Comments</h2>
  </header>
  <div class="content-inner">
    <div class="form-wraper">
      <div class="row search-row">
        <div class="col-md-12">
          <%= render 'search', route: admin_comments_path%>
        </div>
      </div>
      <% @comments.each do |com| %>
        <div class="row comments-row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-xs-9 col-sm-10 col-md-9">
                <b class="commenter"> <%= com.visitor.fullname %> </b> posted message on: <b> <%= truncate(com.post.title, length: 60, separator: '') %> </b><br />
                <small> <%= com.created_at.strftime("%a %H:%M - %d/%m/%Y") %> </small>
              </div>
              <div class="col-xs-3 col-sm-2 col-md-3">
                <div class="clearfix">
                  <div class="pull-right comment-age"> <%= time_ago com.post.created_at %> </div>
                </div>
              </div>
            </div>
            <div class="comments-well well well-sm">
              <%= com.message %> 
            </div>
            <div class="clearfix">
              <div class="pull-right">
                <%= comments_approving_links_converter params, com %>
                <%= link_to "<span class='fa fa-trash-o'></span> Delete".html_safe, admin_comment_path(com), method: :delete, data: {confirm: "Are you Sure"}, class: "btn btn-xs btn-default" %>
              </div>
            </div>
          </div>
        </div>
        <hr />
      <% end %> 
      <div class="row">
        <div class="col-md-12 text-center">
          <%= paginate @comments %> 
        </div>
      </div>
    </div>
  </div>
</div>
