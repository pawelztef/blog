<div id="admin-all-visitors-content">
  <header class='clearfix'>
    <h2 class="page-title pull-left">Moderators</h2>
  </header>
  <div class="content-inner">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Fullname</th>
          <th>Username</th>
          <th class="hidden-xs">Created at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @moderators.each do |moderator| %>
          <tr>
            <td class="visitor-name"><%= moderator.fullname %></td>
            <td><%= moderator.username%></td>
            <td class="hidden-xs"><%= time_ago(moderator.created_at) %></td>
            <td> <%= link_to "<span class='fa fa-pencil-o'></span> Edit".html_safe, edit_admin_moderator_path(moderator), class: 'btn btn-xs btn-default' %></td>
          </tr>
        <% end %> 
      </tbody>
    </table>
  </div>
</div>
