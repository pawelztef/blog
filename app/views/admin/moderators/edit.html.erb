<div id="admin-all-visitors-content">
  <header class='clearfix'>
    <h2 class="page-title pull-left">Edit Moderator</h2>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs pull-right" role="tablist">
      <li role="presentation" class="active"><a href="#details" data-toggle="tab">Profile Details</a></li>
      <li role="presentation"><a href="#bio" data-toggle="tab">Bio</a></li>
    </ul>
  </header>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="details">
      <div class="content-inner">
        <div class="form-wrapper">
          <%= render 'validation_errors', object: @moderator %> 
          <%= form_for [:admin, @moderator] do |f| %>
            <div class="row">
              <div class="col-md-4">
                <%= f.label :avatar %>
                <%= @moderator.set_avatar %> 
                <div class="form-group">
                  <%= f.file_field :avatar %> 
                </div>
              </div>
              <div class="col-md-8">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :fullname %>
                      <%= f.text_field :fullname, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :username %>
                      <%= f.text_field :username, class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.label :password %>
                      <%= f.password_field :password, value: @moderator.password, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password_confirmation %>
                      <%= f.text_field :password_confirmation, value: @moderator.password, class: 'form-control' %>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.label :catchphrase %>
                      <%= f.text_area :catchphrase, rows: 4, class: 'form-control' %>
                    </div>
                    <div class="form-group form-inline">
                      <%= f.check_box :owner, class: 'checkbox' %>
                      <%= f.label :owner, "publish personal details when click on save" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <br>
                <br>
                <div class="form-group">
                  <%= f.submit class: 'btn btn-default' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="bio">
      <div class="content-inner">
        <div class="form-wrapper">
          <%= form_tag bio_update_admin_bios_path  do %>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= cktext_area_tag :bio_body, @bio %>
                </div>
                <br>
                <br>
                <div class="form-group">
                  <%= submit_tag 'Update Bio', class: 'btn btn-default' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

