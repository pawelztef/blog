<div id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-center col-md-9"> 

        <div class="panel">
          <div class="panel-body">
            <div class="row">    
              <div class="col-center col-md-10 col-sm-9">
                <p class="text-right"> <%= time_ago @post.created_at %> </p>
                <h1> <%= @post.title %></h1>
                <hr />
                <div class="row">
                  <div class="col-lg-12">
                    <p>
                    <%= @post.content %> 
                    </p>
                  </div>
                  <div class="col-xs-9">
                  </div>
                  <div class="col-xs-3">
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-12">

                    <h3>Comments</h3>
                    <p>
                    <% @post.comments.approved.each.with_index(1) do |comment, index| %>
                      <p>
                      <%= comment.message %>  
                      <b> <%= double_digit_number index %> </b><br />
                      <b> <%= comment.visitor.fullname %></b> commented: <%= time_ago comment.created_at %><br /> 
                      </p>
                    <% end %> 
                    </p>
                    <hr />
                    <%= form_for @visitor_comment, url: comments_url do |f| %>

                      <% if session[:visitor_errors] %>
                        <div id="error_explanation">
                          <h2> <%= pluralize(session[:visitor_errors].count, 'error') %> prohibited this comment from being saved :</h2>
                          <ul>
                            <% session[:visitor_errors].each do |message| %>
                              <li> <%= message %> </li>
                            <% end %> 
                          </ul>
                        </div>
                      <% end %> 

                      <p> 
                      <%= f.label :fullname %>
                      <%= f.text_field :fullname %>
                      </p>
                      <p> 
                      <%= f.label :email %>
                      <%= f.text_field :email %>
                      </p>

                      <%= f.fields_for :comments do |c| %>
                        <p>
                        <%= c.label :message %> 
                        <%= c.text_area :message %> 
                        <%= c.hidden_field :post_id, value: @post.id %> 
                        </p>
                      <% end %> 

                      <p> <%= f.submit 'Add Comment' %> </p>

                    <% end %> 
                    <div class="text-right">
                      <%= link_to "All Posts", posts_path %> 
                    </div>
                  </div>
                  <div class="col-xs-9">
                  </div>
                  <div class="col-xs-3">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>


