<div id="post-show">
  <div class="container">
    <div class="row">
      <div class="col-xs-2">

        <div class="row">
          <div class="col-xs-12 meta-author-wrap">

            <%= image_tag 'gravatar-small.jpg', class: 'avatar-img img-responsive' %> 

            <div class="meta-author">
              <h4> <strong> Pawel Stefaniak </strong></h4>
              <p> freelance<br /> web developer </p>
              <p> developer @ <a href="#">rise</a></p>
              <p><a href="#">message</a></p>
            </div>

          </div>
        </div>

      </div>

      <div class="col-xs-9"> 
        <div class="panel">
          <div class="panel-body">
            <div class="row">    
              <div class="col-center col-md-10 col-sm-9">
                <h1> <%= @post.title %></h1><hr />

                <div class="row">
                  <div class="col-lg-12">

                    <p> <%= @post.content %> </p>

                  </div>
                </div><hr />

                <div class="row">
                  <div class="col-lg-12">
                    <h3>Comments</h3>

                    <% @post.comments.approved.each.with_index(1) do |comment, index| %>
                      <div class="bs-callout">
                        <h4> <b><%= comment.visitor.fullname %></b> </h4>
                        <p> <%= comment.message %>  </p>
                        <%# <b> <%= double_digit_number index %1> </b><br /> %>
                        <p> <em>commented: <%= time_ago comment.created_at %></em> </p>
                      </div>
                    <% end %> 
                    <hr />

                    <div class="comments-form">
                      <% if check_commenting_availability %>
                        <%= render 'comments_form' %> 
                      <% end %> 
                    </div>

                    <div class="text-right">
                      <%= link_to "All Posts", posts_path %> 
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


