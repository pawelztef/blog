<h1> <%= @post.title %></h1><hr />
<div class="row">
  <div class="col-lg-12">
    <p> <%= @post.content %> </p>
  </div>
</div><hr />
<div class="row">
  <div class="col-lg-12">
    <h3>Comments</h3>
    <% @post.comments.approved.each.with_index(1) do |comment, index| %>
      <div class="bs-callout">
        <h4> <b><%= comment.visitor.fullname %></b> </h4>
        <p> <%= comment.message %>  </p>
        <%# <b> <%= double_digit_number index %1> </b><br /> %>
        <p> <em>commented: <%= time_ago comment.created_at %></em> </p>
      </div>
    <% end %> 
    <hr />
    <div class="comments-form">
      <% if check_commenting_availability %>
        <%= render 'comments_form' %> 
      <% end %> 
    </div>
    <div class="text-right">
      <%= link_to "All Posts", posts_path %> 
    </div>
  </div>
</div>

