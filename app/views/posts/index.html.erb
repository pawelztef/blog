
<div id="front-index">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-md-push-3"> 
	<div class="panel">
	  <div class="panel-body">
            <br>
	    <% @posts.each do |post| %>
	      <div class="row">    
		<div class="col-center col-md-10 col-sm-9">
		  <h3> <%= truncate(post.title, length: 70, separator: '') %> </h3>
		  <div class="row post-details">
		    <div class="col-xs-9">
		      <h4> <small style="font-family:courier,'new courier';" class="text-muted"><%= time_ago post.created_at %> â€¢ <%= link_to "Read More", post_path(post), class: "text-muted" %></small> </h4>
		      <% if Setting.tag_visible? %>
			<% post.tags.each do |tag| %>
			  <h4><span class="tag-label"><%= link_to tag.name, posts_path(tag: tag.name) %></span></h4>
			<% end %> 
		      <% end %> 
		    </div>
		    <div class="col-xs-3"></div>
		  </div>
		</div>
	      </div>
	      <hr>
	    <% end %> 
            <div class="kaminari text-center">
              <%= paginate @posts %> 
            </div>
	  </div>
	</div>
      </div>
      <div class="books-reviews col-md-3 col-md-pull-9">
	<div class="panel">
	  <div class="panel-body">
	    <div class="row">    
	      <div class="book-header">
		<div class="col-sm-6 col-lg-12 text-center">
		  <h3>Must Read</h3>
		</div>
	      </div>
	    </div>
	    <div class="row">
	      <div class="col-lg-12">
		<div class="row">
		  <div class="col-md-12 col-sm-6">
		    <div class="text-center"> <%= image_tag @book.cover.url(:medium), class: "img-fluid" %> </div>
		  </div>
		  <div class="col-md-12 col-sm-6">
		    <div class="text-center">
		      <h3><%= @book.title %></h3>
		      <h4> <%= @book.auth_name %> </h4>
		      <h5> <%= @book.published %> </h5>
		      <h5> <%= link_to ">> Read Review <<", review_path(@book), remote: true, class: "text-centerd"  %> </h5>
		    </div>
		  </div>
		</div>
	      </div>
	      <br>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
