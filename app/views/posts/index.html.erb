<%# <div class="container"> %>
  <%#   <div class="row"> %>
    <%#     <div class="col-md-12"> %> 
      <div class="col-md-12">
        <div class="top-spacer"> </div>
      </div>
      <div class="panel">
        <div class="panel-body">
          <%= link_to "All posts", posts_path %> 
          <% @posts.each do |post| %>
            <div class="row">    
              <br>
              <div class="col-md-10 col-sm-9">
                <h3> <%= truncate(post.title, length: 70, separator: '') %> </h3>
                <div class="row">
                  <div class="col-lg-12">
                    <%= truncate(post.content, length: 104, separator: '') %>
                  </div>
                  <div class="col-xs-9">
                    <h4> <small style="font-family:courier,'new courier';" class="text-muted"><%= time_ago post.created_at %> â€¢ <%= link_to "Read More", post_path(post), class: "text-muted" %></small> </h4>
                    <% if Setting.tag_visible? %>
                      <% post.tags.each do |tag| %>
                        <h4><span class="label label-default"><%= link_to tag.name, posts_path(tag: tag.name) %></span></h4>
                      <% end %> 
                    <% end %> 
                  </div>
                  <div class="col-xs-3"></div>
                </div>
                <br><br>
              </div>
            </div>
            <hr>
          <% end %> 
          <%= paginate @posts %> 
        </div>
      </div>
      <%# </div> %>
    <%# </div> %>
  <%# </div> %>
